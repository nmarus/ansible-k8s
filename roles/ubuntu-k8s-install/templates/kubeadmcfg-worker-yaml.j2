---
apiVersion: kubeadm.k8s.io/v1beta2
kind: JoinConfiguration
caCertPath: /etc/kubernetes/pki/ca.crt
discovery:
  file:
    kubeConfigPath: /etc/kubernetes/discovery.yaml
  timeout: 5m0s
  tlsBootstrapToken: y7yaev.9dvwxx6ny4ef8vlq
nodeRegistration:
  kubeletExtraArgs:
{% if cloud_provider is defined %}
    cloud-provider: {{cloud_provider}}
{% endif %}
    feature-gates: "ServiceTopology=true,EndpointSlice=true,EndpointSliceProxying=true{% if enable_ipv6 %},IPv6DualStack=true{% endif %}"
  criSocket: /var/run/dockershim.sock
---
apiVersion: kubeproxy.config.k8s.io/v1alpha1
kind: KubeProxyConfiguration
featureGates:
  ServiceTopology: true
  EndpointSlice: true
  EndpointSliceProxying: true
{% if enable_ipv6 %}
  IPv6DualStack: true
{% endif %}
---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
featureGates:
  ServiceTopology: true
  EndpointSlice: true
  EndpointSliceProxying: true
{% if enable_ipv6 %}
  IPv6DualStack: true
{% endif %}
